					<div class="col-md-5">
						<br/><br/><br/><br/>
						<div class="row" style="font-size: 18px;">
							<div class="col-md-6">
								<div style="font-weight: 600; font-size: 25px;">
									<i class="fa-solid fa-calendar"></i>
									dates:
								</div>

								<ul>
									<br>
									<li class="event-info">
										<p>Start date:
											{{ event.getDateDebut().format('Y-m-d') }}
										</p>

									</li>
									<li class="event-info">
										<p>End date:
											{{ event.getDateFin().format('Y-m-d') }}
										</p>
									</li>


								</ul>


							</div>
							<div class="col-md-6">


								<div style="font-weight: 600; font-size: 25px;">
									<i class="fa-solid fa-hand-holding-dollar"></i>
									Price:
									{{ event.price }}
									TND
								</div>


								<br>
								<div style="font-weight: 600; font-size: 25px;">
									<i class="fa-solid fa-leaf"></i>
									Natural features:
								</div>
								<ul>

									<br/>
									<li class="event-info">

										{% if event.place == 'desert' %}
											<i class="fa-solid fa-island-tropical fa-xl"></i>
											Desert
										{% elseif event.place == 'beach' %}
											<i class="fa-solid fa-umbrella-beach fa-xl"></i>
											Beach
										{% else %}
											<i class="fa-solid fa-tree fa-xl"></i>
											Forest
										{% endif %}

									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>

				<br/><br/>

				<div class="row fade-in">
					<div class="col-md-4">
						<div class="weather-map-placement rounded-4">
							<div class="weather">
								<br/>
								<h2 id="city">Weather in</h2>
								<h5 id="country"></h5>
								<div class="weather-icon">
									<img id="weather-icon" src=""/>
								</div>
								<h1 id="temp"></h1>
								<h2 id="text"></h2>
								<div class="details row">
									<div class="col">
										<div class="row">
											<div class="col">
												<img style="transform: scale(0.7)" src="/assets/images/EventPageImages/weather-app-img/images/humidity.png"/>
											</div>

											<div class="col">
												<div id="humidity" class="humidity-wind-text"></div>
												<p style="margin-left: -50px">Humidity</p>
											</div>
										</div>
									</div>

									<div class="col">
										<div class="row">
											<div class="col">
												<img style="transform: scale(0.7)" src="
																																																																																																																																																																																																																								                          /assets/images/EventPageImages/weather-app-img/images/wind.png"/>
											</div>

											<div class="col">
												<div id="wind" class="humidity-wind-text"></div>
												<p style="margin-left: -50px">Wind Speed</p>
											</div>
										</div>
									</div>
								</div>

								<br/>
							</div>
						</div>
					</div>

					<div class="col-md-8">
						<div id="map" class="weather-map-placement rounded-4"></div>
					</div>
				</div>


				<br/><br/><br/>
				<div id="errorBox" class="alert alert-warning alert-dismissible fade show" role="alert" style="display:none;">
					<span id="errorMsg"></span>
				</div>

				<div class="row fade-in">


					<form method="post">
						<div class="col-md-10">
							<div class="book-card">
								<div class="book-card-details">
									<p class="book-text-title">Are you ready to be a part of our wonderful adventure? book now!</p>
									<br>
									<div class="book-input-group">
										<input required type="number" max="{{ event.getNbrGuestsMax() }}" min="1" name="GuestNbr" autocomplete="off" class="book-input" id="guests" data-max-guests="{{ event.getNbrGuestsMax() }}">
										<label class="book-user-label">Guest number</label>
									</div>
									<br>
								</div>
								<div class="row">
									<div class="col-md-8"></div>
									{% if user %}
										<div class="col-md-4">
											<button type="submit" class="col-md-4 book-card-button" id="btn" formaction="{{ path('booking_app') }}">Book now</button>
										</div>
									{% else %}
										<div class="col-md-4">
											<button type="submit" class="col-md-4 book-card-button" id="btn" formaction="{{ path('app_authentication',{'event': event.id}) }}">Book now</button>
										</div>
									{% endif %}
								</div>
							</div>
						</div>
						<input type="hidden" name="event" value="{{ event.id }}">
					</form>


				</div>
			</div>
		</div>

		<div class="col-md-1"></div>
	</div>


	<br/><br/><br/>
